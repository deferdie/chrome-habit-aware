{
  "name": "Habit aware",
  "description": "Know your habits. Avoid the ones you need to change.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["http://*/", "https://*/"],
  "action": {
    "default_popup": "/src/views/popup.html",
    "default_icon": {
      "128": "/images/habit-aware-logo.png"
    }
  },
  "icons": {
    "128": "/images/habit-aware-logo.png"
  },
  "options_page": "/src/views/options.html"
}
